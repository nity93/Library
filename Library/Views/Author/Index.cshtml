@model List<Library.Models.Author>
<h2>Authors</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new {@class = "btn btn-primary" })
</p>

<table class="table table-bordered table-striped table-hover">
    <thead>
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        @*<th>
            Created On
        </th>
        <th>
            Created By
        </th>
        <th>
            Last Modified On
        </th>
        <th>
           Last Modified By
        </th>*@
        @*<th>
            Is Deleted
        </th>*@
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.CreatedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastModifiedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastModifiedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsDeleted)
                    </td>*@
                <td>
                    <a title="Edit" href="@Url.Action("Edit","Author",new { item.ID })"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> |
                    <a title="Details" href="@Url.Action("Details","Author",new { item.ID })"><span class="glyphicon glyphicon-list" aria-hidden="true"></span></a> |
                    <a title="Delete" href="@Url.Action("Delete","Author",new { item.ID })"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>
